@model TruyumApplication.ViewModels.NewItemViewModel

@{
                /**/

                /**/

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Id)
{
    <h1>Edit Menu Item</h1>
}
else
{
    <h1>Create New Item</h1>
}
<hr />
@using (Html.BeginForm("Submit", "MenuItems"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Name)
        @Html.TextBoxFor(m => m.MenuItem.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.FreeDelivery)
        @Html.CheckBoxFor(m => m.MenuItem.FreeDelivery)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Price)
        @Html.TextBoxFor(m => m.MenuItem.Price, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.DateOfLaunch)
        @Html.EditorFor(m => m.MenuItem.DateOfLaunch, new { htmlAttributes = new { @class = "form-control" } })
        @*Html.TextBoxFor(m => m.MenuItem.DateOfLaunch, @"{0:yyyy\/MM\/dd}", new { @class = "form-control", Type = "date" })*@
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.Active)
        @Html.CheckBoxFor(m => m.MenuItem.Active)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MenuItem.CategoryId)
        @Html.DropDownListFor(m => m.MenuItem.CategoryId, new SelectList(Model.Categories, "Id", "Name"), "Select Food Category", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.MenuItem.Id)

    if (ViewBag.Id)
    {
        <button type="submit" class="btn btn-primary">Save</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Create</button>
    }

    <hr />

    <div class="form-group">
        @Html.ActionLink("Back to List", "Admin", "MenuItems",routeValues:new { isAdmin=true },htmlAttributes:null)
    </div>

}



